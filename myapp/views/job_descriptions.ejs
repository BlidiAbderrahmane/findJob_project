<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/fiche_de_poste.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title><%= title %></title>
</head>
<body>

  <% include navbar_recruiter %>
      <% jobDescriptions.forEach((jobDescription) => { %> 
      <div class="ajouterOffre">
        <h1>Job Description: <%= jobDescription.title %></h1>
        <div class="createOrganization">
            <table class="table">
              <tbody>
                <tr>
                  <th scope="row">Supervisor:</th>
                  <td><%= jobDescription.supervisor %></td>
                </tr>
                <tr>
                  <th scope="row">Location:</th>
                  <td><%= jobDescription.location %></td>
                </tr>
                <tr>
                  <th scope="row">Work Hours:</th>
                  <td><%= jobDescription.hours_per_week %> </td>
                </tr>
                <tr>
                  <th scope="row">Remote Work:</th>
                  <td>
                      <% if (jobDescription.remote_work === 0) { %>
                          No
                      <% } else if (jobDescription.remote_work === 1) { %>
                          Yes
                      <% } else { %>
                          Undefined
                      <% } %>
                  </td>
              </tr>
              </tbody>
            </table>
        </div>
      </div>
      <% }) %> 

</body>
</html>
