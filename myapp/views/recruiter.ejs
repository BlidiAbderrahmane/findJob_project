<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/recruteur.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Recruiter</title>
</head>
<body>
  <% include navbar_candidate %>
      <div class="grid-container">

        <div class="becomeRecruiter">
          <h1>Become a Recruiter</h1>
          <div class="joinOrganization">
            <h5>Join an Organization</h5>
            <form action="/recruteur/demande_organisation" method="post">
              <label for="nomOrga">Organization Name:</label><br>
              <input type="text" id="nomOrga" name="nomOrga" required><br>
              <input type="submit" value="Send Request">
            </form>
            <% if (typeof error !== 'undefined') { %>
              <div class="error-message"><%= error %></div>
            <% } %>
            <% if (typeof success !== 'undefined') { %>
                <div class="success-message"><%= success %></div>
            <% } %>
          </div>
          <div class="createOrganization">
            <h5>Create an Organization</h5>
            <form action="/recruteur/creer_organisation" method="post">
              <label for="siren">SIREN:</label><br>
              <input type="text" id="siren" name="siren" required><br>
              <label for="nomOrga">Organization Name:</label><br>
              <input type="text" id="nomOrga" name="nomOrga" required><br>
              <label for="typeOrga">Organization Type:</label><br>
              <select id="typeOrga" name="typeOrga" required>
                <option value="">Select the organization type</option>
                <option value="association">Association</option>
                <option value="eurl">EURL</option>
                <option value="sarl">SARL</option>
                <option value="sasu">SASU</option>
                <option value="autre">Other</option>
              </select><br>
              <label for="siegeSocial">Headquarters:</label><br>
              <input type="text" id="siegeSocial" name="siegeSocial" required><br>
              <input type="submit" value="Create Organization">
            </form>
          </div>
        </div>

      </div>

</body>
</html>
